import datetime
import os

fileMath1 = open('Math1Students.txt', 'w')
fileMath1.write("24001\n24002\n24015")
fileMath1.close()

fileAttendance = open('Attendance.txt', 'w')
fileAttendance.close()


User_Input = 0


def Mark_Attendance():
    CourseID = input("Enter your course ID: ")
    if CourseID == 'MAT1024':
        fileMath1 = open('Math1Students.txt', 'r')
        readfile = fileMath1.read()
        StudentID = input("Enter your student ID: ")
    if StudentID in readfile:
        fileAttendance = open('Attendance.txt', 'a')
        fileAttendance.write(f"{StudentID}\n")
        fileAttendance.close()

def Manage_Timetable():
    print("Timetables")

def Check_Assignment():
    print("Check Assignment")

def Display():
    print("Display")

while User_Input != 'e':
    print("Menu:")
    print("a) Mark Attendance")
    print("b) Manage Timetables")
    print("c) Submit/Check Assignments")
    print("d) Display")
    print("e) Exit")
    User_Input = str(input("Select one to proceed: "))
    if User_Input == 'a':
        Mark_Attendance()
    elif User_Input == 'b':
        Manage_Timetable()
    elif User_Input == 'c':
        Check_Assignment()
    elif User_Input == 'd':
        Display()
